{
  "name": "ai-git",
  "displayName": "AI Git",
  "description": "AI-powered root cause analysis for production issues using Git history",
  "version": "0.0.3",
  "publisher": "motimalka",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "AI",
    "crash",
    "debug",
    "git",
    "azure",
    "openai"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ai-crash-finder"
  },
  "activationEvents": [
    "onCommand:ai-crash-finder.analyzeIssue"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-crash-finder.analyzeIssue",
        "title": "AI: Analyze Issue from Git Diff",
        "icon": "$(bug)"
      },
      {
        "command": "aiCrashFinder.analyze",
        "title": "AI Crash Finder: Analyze Issue",
        "icon": "$(search)"
      },
      {
        "command": "aiCrashFinder.configure",
        "title": "AI Crash Finder: Configure Azure OpenAI",
        "icon": "$(gear)"
      },
      {
        "command": "aiCrashFinder.clearConfig",
        "title": "AI Crash Finder: Clear Configuration",
        "icon": "$(trash)"
      },
      {
        "command": "aiCrashFinder.openResults",
        "title": "AI Crash Finder: Open Results Folder",
        "icon": "$(folder-opened)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "ai-crash-finder.analyzeIssue"
        },
        {
          "command": "aiCrashFinder.analyze"
        },
        {
          "command": "aiCrashFinder.configure"
        },
        {
          "command": "aiCrashFinder.clearConfig"
        },
        {
          "command": "aiCrashFinder.openResults"
        }
      ],
      "editor/context": [
        {
          "command": "ai-crash-finder.analyzeIssue",
          "group": "ai-crash-finder",
          "when": "resourceScheme == file"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.0",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "openai": "^5.1.1",
    "simple-git": "^3.28.0"
  }
}
